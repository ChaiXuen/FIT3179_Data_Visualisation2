{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
      "url": "https://raw.githubusercontent.com/ChaiXuen/FIT3179_Data_Visualisation2/main/data/movies_cleaned.csv"
  },
  "vconcat": [
    {
      "width": 900,
      "height": 500,
      "selection": {
        "genre_highlight": {
          "type": "multi",
          "fields": ["genre"],
          "bind": "legend"
        }
      },
      "mark": {"type": "line", "size": 3},
      "encoding": {
        "x": {
          "field": "year",
          "type": "temporal", 
          "scale": {"domain": {"param": "brush"}},
          "axis": {"title": "Year",
          "grid": false,
          "labelFontSize":15, 
          "titleFontSize":15}
        },
        "y": {
          "field": "genre",
          "type": "nominal",
          "aggregate": "count",
          "axis": {"title": "Number of Movies",
          "labelAlign":"right",
          "labelFontSize":15, 
          "titleFontSize":15}
        },
        "color": {
          "field": "genre",
          "type": "nominal",
          "scale": {
            "range": [
              "#1f77b4",
              "#ff7f0e",
              "#2ca02c",
              "#d62728",
              "#9467bd",
              "#8c564b",
              "#e377c2",
              "#7f7f7f",
              "#bcbd22",
              "#17becf",
              "#aec7e8",
              "#ffbb78",
              "#98df8a",
              "#ff9896",
              "#2B2D42",
              "#c49c94",
              "#f7b6d2",
              "#c7c7c7" 
            ]
          },
          "legend": {"title": "Genre Filter","titleFontSize":15, "labelFontSize": 15, "symbolStrokeWidth": 7}
        },
        "opacity": {
          "condition": {"selection": "genre_highlight", "value": 0.9},
          "value": 0.1
        },
        "tooltip": [
          {"field": "year", "type": "temporal", "title": "Year", "timeUnit": "year"},
          {"field": "genre", "type": "nominal", "title" : "Genre"},
          {"field": "genre", "type": "nominal", "aggregate": "count", "title" : "Number of Movies"}
        ]
      }
    },
    {
      "title": "Use this line chart to filter the year",
      "width": 900,
      "height": 60,
      "mark": "line",
      "params": [
          {"name": "brush", 
          "select": {"type": "interval","encodings": ["x"]}}
          ],                
      "encoding": {
          "x": {
              "timeUnit": "year",
              "field": "year",
              "type": "temporal",
              "axis":{"title":"","labelAlign":"center",
              "labelFontSize":15, "titleFontSize":15}
            },
          "y": {
              "aggregate": "count",
              "field": "genre",
              "type": "nominal",
              "axis": {"tickCount": 4, "grid": false, "title": "",
              "labelFontSize":15, "titleFontSize":15}
          }
      }
    }
  ],
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}