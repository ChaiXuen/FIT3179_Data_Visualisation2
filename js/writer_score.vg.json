{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {"text": "Top Writers by Average Score", "fontSize":16},
    "data": {"url": "https://raw.githubusercontent.com/ChaiXuen/FIT3179_Data_Visualisation2/main/data/movies_cleaned.csv"},
    "mark": "bar",
    "transform": [
      {
        "aggregate": [{"op": "mean", "field": "score", "as": "aggregate_score"}],
        "groupby": ["writer"]
      },
      {
        "window": [{"op": "row_number", "as": "rank"}],
        "sort": [{ "field": "aggregate_score", "order": "descending" }]
      },
      {
        "calculate": "datum.rank < 10 ? datum.writer : 'All Others'", "as": "ranked_writer"
      }
    ],
    "encoding": {
      "x": {
        "aggregate": "mean",
        "field": "aggregate_score",
        "type": "quantitative",
        "axis":{
          "title":"Average Score","labelAlign":"center", "labelFontSize":15, "titleFontSize":15
        }
      },
      "y": {
        "sort": {"op": "mean", "field": "aggregate_score", "order": "descending"},
        "field": "ranked_writer",
        "type": "ordinal",
        "axis":{
          "title":"Writer","labelAlign":"right", "labelFontSize":15, "titleFontSize":15
        }
      },
      "color": {"value": "grey"},
      "tooltip": [
        {"field": "ranked_writer", "type": "nominal", "title" : "Writer"},
        {"field": "aggregate_score", "type": "quantitative", "title" : "Movies Average Score"}
      ]
    }
}
  