{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Top 10 Directors by Movies Average Score", "fontSize":16, "frame": "bounds"},
  "data": {"url": "https://raw.githubusercontent.com/ChaiXuen/FIT3179_Data_Visualisation2/main/data/movies_cleaned.csv"},
  "mark": "bar",
  "transform": [
    {
      "aggregate": [{"op": "mean", "field": "score", "as": "aggregate_score"}],
      "groupby": ["director"]
    },
    {
      "window": [{"op": "row_number", "as": "rank"}],
      "sort": [{ "field": "aggregate_score", "order": "descending" }]
    },
    {
        "calculate": "datum.rank <= 10 ? datum.director : null", "as": "ranked_director"
      },
      {
        "filter": "datum.ranked_director !== null"
      }
  ],
  "encoding": {
    "x": {
      "aggregate": "mean",
      "field": "aggregate_score",
      "type": "quantitative",
      "axis":{
        "title":"Average Score","labelAlign":"center", "labelFontSize":15, "titleFontSize":15
      }
    },
    "y": {
      "sort": {"op": "mean", "field": "aggregate_score", "order": "descending"},
      "field": "ranked_director",
      "type": "ordinal",
      "axis":{
        "title":"Director","labelAlign":"right", "labelFontSize":15, "titleFontSize":15
      }
    },
    "color": {"value": "grey"},
    "tooltip": [
      {"field": "ranked_director", "type": "nominal", "title" : "Director"},
      {"field": "aggregate_score", "type": "quantitative", "title" : "Movies Average Score", "format": ".2f"}
    ]
  },
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}
